@page
@model IndexModel
@{
}

<br />
<h2>Book List</h2>
<br />

<a asp-page="Create" class="btn btn-primary"> Create New Book</a>

<br />
<br />
@if (Model.Books.Count() > 0)
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)</th>
            <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)</th>
        </tr>
        @foreach (var book in Model.Books)
        {
            <tr>
                @*<td>@book.Name</td>
                    <td>@book.ISBN</td>
                    <td>@book.Author</td>*@
                <td>@Html.DisplayFor(m => book.Name)</td>
                <td>@Html.DisplayFor(m => book.ISBN)</td>
                <td>@Html.DisplayFor(m => book.Author)</td>
            </tr>
        }
    </table>
}
else
{
    <div>No Books In Database.</div>
}